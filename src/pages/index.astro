---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Galata Luxury - Ev Dekorasyon">
  <!-- Üst Banner -->
  <div class="bg-gray-100 text-center text-sm py-2 font-semibold">
    SEÇİLİ ÜRÜNLERDE %25 İNDİRİM!
  </div>

  <!-- Menü -->
  <nav class="flex justify-center gap-6 py-4 text-sm font-medium border-b">
    <a href="#">Ev Dekorasyonu</a>
    <a href="#">Banyo Dekorasyonu</a>
    <a href="#">Ofis Dekorasyonu</a>
    <a href="#">Sofra & Mutfak</a>
    <a href="#">Hediyelik</a>
    <a href="#">Tüm Ürünler</a>
  </nav>

  <!-- Slider Alanı -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-6 items-center bg-white">
    <img src="https://harehome.com.tr/uploads/sliders/slider1.jpg" alt="Vitrin" class="rounded shadow-md"/>
    <div class="text-center md:text-left">
      <h1 class="text-3xl font-bold mb-2">Ev Dekorasyon Ürünleri</h1>
      <p class="text-gray-600 text-lg">Galata Luxury ile evinizin havası değişsin.</p>
    </div>
  </div>

  <!-- Ürünler -->
  <section class="p-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 bg-gray-50">
    <div class="bg-white p-4 rounded shadow">
      <img src="https://harehome.com.tr/uploads/products/urun1.jpg" class="w-full mb-3 rounded" />
      <h3 class="font-semibold text-lg">Kristal Vazo</h3>
      <p class="text-gray-600">₺299,90</p>
    </div>

    <div class="bg-white p-4 rounded shadow">
      <img src="https://harehome.com.tr/uploads/products/urun2.jpg" class="w-full mb-3 rounded" />
      <h3 class="font-semibold text-lg">Ahşap Çerçeve</h3>
      <p class="text-gray-600">₺159,90</p>
    </div>

    <div class="bg-white p-4 rounded shadow">
      <img src="https://harehome.com.tr/uploads/products/urun3.jpg" class="w-full mb-3 rounded" />
      <h3 class="font-semibold text-lg">Dekoratif Mumluk</h3>
      <p class="text-gray-600">₺199,90</p>
    </div>
  </section>
</Layout>
